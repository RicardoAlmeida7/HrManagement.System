@page
@model HrManagement.WebApplication.Pages.Users.DeleteModel
@{
    Layout = "_LayoutModal";
}
<form asp-page="delete" method="post" onsubmit="return jQueryAjaxPost(this)">
    @Html.HiddenFor(p => p.UserPageModel.Id)
    <div>
        <h2>
            <strong>
                Deseja excluir permanetemente o usuário @Model.UserPageModel.FullName?
            </strong>
        </h2>
        <p class="alert alert-warning text-danger text-center">
            <strong>
                Esta ação não poderá ser desfeita após a confirmação!
            </strong>
        </p>
    </div>
    <div class="form-group" style="text-align:right">
        <input type="button" value="Cancelar" data-bs-dismiss="modal" class="btn btn-outline-secondary" />
        <input type="submit" value="Confirmar" class="btn btn-primary" style="margin-left:10px" />
    </div>
</form>
