@page "/login/resetpassword"
@model HrManagement.WebApplication.Pages.Login.ResetPasswordModel
@{
    ViewData["Title"] = "Redefinir senha";
}

<div asp-validation-summary="ModelOnly" class="text-center alert alert-danger"></div>
<div class="row d-flex justify-content-center" style="margin-top:50px">
    <div class="col-md-3">
        <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
            <div class="card-header">
                <h2 class="card-title">Redefinir senha</h2>
            </div>
            <div class="card-body align-cent">
                <form method="post">
                    <input type="hidden" asp-for="Model.UserId" />
                    <input type="hidden" asp-for="Model.Token" />
                    <div class="form-group">
                        <label>Informe a senha</label>
                        <input asp-for="Model.NewPassword" type="password" autofocus="autofocus" class="form-control" />
                        <span asp-validation-for="Model.NewPassword" class="text-info"></span>
                    </div>
                    <div class="form-group" style="margin-top:10px">
                        <label>Confirme a senha</label>
                        <input asp-for="Model.ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="Model.ConfirmPassword" class="text-info"></span>
                    </div>
                    <div class="form-group" style="margin-top:15px">
                        <input type="submit" name="Login" value="Enviar" class="btn btn-outline-info float-end">
                        <a class="btn btn-outline-light float-end" style="margin-right: 10px" asp-area="login" asp-page="/login/login">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
