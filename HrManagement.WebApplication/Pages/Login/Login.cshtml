@page "/Login"
@model HrManagement.WebApplication.Pages.Login.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div asp-validation-summary="ModelOnly" class="text-center alert alert-danger"></div>
<div class="row d-flex justify-content-center" style="margin-top:50px">
    <div class="col-md-4">
        <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
            <div class="card-header">
                <h2 class="card-title">Login</h2>
            </div>
            <div class="card-body align-cent">
                <form method="post">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div>Autorizado</div>
                    }else{
                        <div class="form-group">
                            <label>Usuário</label>
                            <input asp-for="User.UserName" class="form-control" />
                            <span asp-validation-for="User.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Senha</label>
                            <input asp-for="User.PasswordHash" autofocus="autofocus" autocomplete="off" class="form-control" />
                            <span asp-validation-for="User.PasswordHash" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="right">
                            <button type="submit" name="Login" class="btn btn-outline-info">Acessar</button>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>


