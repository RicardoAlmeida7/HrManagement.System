@page "/Login"
@model HrManagement.WebApplication.Pages.Login.LoginModel
@{
    ViewData["Title"] = "Login";
}
@{
    var message = TempData["Message"] as string;
    if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success text-center">@message</div>
    }
}
<div asp-validation-summary="ModelOnly" class="text-center alert alert-danger"></div>
<div class="row d-flex justify-content-center" style="margin-top:50px">
    <div class="col-md-3">
        <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
            <div class="card-header">
                <h2 class="card-title">Login</h2>
            </div>
            <div class="card-body align-cent">
                <form method="post">
                    <div class="form-group">
                        <label>Usuário</label>
                        <input asp-for="Model.UserName" autofocus="autofocus" class="form-control" />
                        <span asp-validation-for="Model.UserName" class="text-info"></span>
                    </div>
                    <div class="form-group">
                        <label>Senha</label>
                        <input asp-for="Model.Password" type="password" autocomplete="off" class="form-control" />
                        <span asp-validation-for="Model.Password" class="text-info"></span>
                    </div>
                    <div class="form-group" style="margin-top:15px">
                        <input type="submit" name="Login" value="Acessar" class="btn btn-outline-info float-end">
                        <a class="nav-link text-white" asp-area="login" asp-page="/login/recoverpassword">Recuperar senha</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
